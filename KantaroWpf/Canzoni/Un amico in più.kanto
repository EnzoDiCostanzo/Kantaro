    <parte accordo="Fa">città, non restare </parte>
    <parte accordo="Sol">solo,</parte>
    <br />
    <parte accordo="La-">corri insieme a </parte>
    <parte accordo="Fa">noi e vieni a </parte>
    <parte accordo="Sol">colorare.</parte>
    <br />
    <parte accordo="Do">Entra nel giar</parte>

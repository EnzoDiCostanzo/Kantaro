    <parte accordo="Fa">alti, magri e </parte>
    <parte accordo="Sol">grassi,</parte>
    <br />
    <parte accordo="La-">vieni insieme a </parte>
    <parte accordo="Fa">noi canteranno </parte>
    <parte accordo="Sol">anche i sassi.</parte>
  </strofa>
